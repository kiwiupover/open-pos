<div id="payments" class='reveal-modal expand'>
  <div class='ten columns text-center'>
    <button {{action 'tender' target='controller'}} class="button small">Credit Card</button>
    <button {{action 'tender' target='controller'}} class="button small">Check</button>
    <button {{action 'tender' target='controller'}} class="button small">Exact Cash</button>
  </div>
	<div class='twelve columns'>
		<form>
			{{input value=amountTendered id="tender-amount" placeholder="The Amount Tendered" required="true"}}
			<h5>Change Due: {{money-display changeDue}}</h5>
	  	<button {{action 'tender' target='controller'}} class="button">Tender</button>
		</form>
	</div>
	<a {{action 'closeModal'}} class="close-reveal-modal">&#215;</a>
</div>
