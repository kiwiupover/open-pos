<form {{action 'submit' on='submit'}} addCustom>
  <div class="row">
    <div class="large-8 columns">
      {{input value=name placeholder="Product Name"}}
    </div>
    <div class="large-4 columns">
      {{input value=price placeholder="Price"}}
    </div>
    <div class="large-3 columns">
      <button {{action 'submit'}} class="button small">Add</button>
    </div>
    <div class="large-3 columns text-right">
      <a href="#" {{action 'cancelCustomLineItem'}}>cancel</a>
    </div>
  </div>
</form>
